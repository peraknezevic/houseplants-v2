
model Plant {
  id    Int    @id @default(autoincrement())
  title String @unique
  slug  String @unique
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}

enum Role {
  USER
  ADMIN
}
